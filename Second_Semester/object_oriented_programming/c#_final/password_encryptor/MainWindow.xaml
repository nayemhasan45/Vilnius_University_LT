<Window x:Class="password_encryptor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:password_encryptor"
        mc:Ignorable="d"
        Title="password breaker" Height="400" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Enter Password:" />
            <TextBox x:Name="PasswordTextBox" Width="200" />
            <Button x:Name="CreatePasswordButton" Content="Create Password" Width="200" Margin="0,10,0,0" Click="CreatePasswordButton_Click"/>
            
            <Label Content="Your encrypted text is" />
            <TextBox x:Name="encryptedBox" Width="200" />


            <Button x:Name="BruteForceButton" Content="Brute Force Attack" Width="200" Margin="0,10,0,0" Click="BruteForceButton_Click"/>
            <Label Content="Decrypted Password:" Margin="0,10,0,0" />
            <TextBox x:Name="DecryptedPasswordTextBox" Width="200" IsReadOnly="True" />

            <TextBlock x:Name="ResultTextBlock" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
